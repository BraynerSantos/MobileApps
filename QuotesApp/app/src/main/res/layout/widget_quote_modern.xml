<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/widget_bg_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/widget_background_m3"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/widget_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_quote"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="Quote Icon"
                android:tint="@color/widget_primary"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Daily Inspiration"
                android:textColor="@color/widget_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <TextView
            android:id="@+id/appwidget_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="Your daily quote will appear here."
            android:textColor="@color/widget_on_surface"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

    </LinearLayout>
</FrameLayout>
